<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.Gravity" />

        <variable
            name="adapter"
            type="dx.queen.myreel.viewModel.rvChat.ChatAdapter" />

        <variable
            name="message"
            type="dx.queen.myreel.models.Message" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_from_companion"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="@{adapter.currentUserId.equals(message.fromUserId) ? Gravity.END : Gravity.START}"
            android:maxWidth="240dp"
            android:background="@drawable/message_companion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>
</layout>